<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllPassesActivity.AllPassesContentFragment">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/hscroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/TableContent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/trHead"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/clIndex"
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/AllPassesIndexTitle" />

                        <TextView
                            android:id="@+id/clTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/AllPassesPosTitle" />

                        <TextView
                            android:id="@+id/clInventoryNumber"
                            android:layout_width="93dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/AllPassesAttendantFIO"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/clAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/AllPassesfrom"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/clUnit"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/AllPassesto"
                            android:textAlignment="center" />
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>